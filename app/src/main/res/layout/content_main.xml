<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mauriundjens.sechsstundenapp.MainActivity"
    tools:showIn="@layout/activity_main">


    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical">

        <GridLayout
            android:id="@+id/grid_ornella"
            android:background="#d02645"
            android:layout_gravity="top|fill_horizontal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/image_ornella"
                app:srcCompat="@drawable/ornella"
                android:layout_columnSpan="2"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon_ornella"
                android:layout_gravity="fill"
                app:srcCompat="@android:drawable/ic_media_play"
                android:minHeight="56dp" />

            <TextView
                android:text="5:59:59"
                android:id="@+id/textView_ornella"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:width="120dp" />

        </GridLayout>

        <GridLayout
            android:id="@+id/grid_maurizio"
            android:background="#2e7fc7"
            android:layout_gravity="top|fill_horizontal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/image_maurizio"
                app:srcCompat="@drawable/maurizio"
                android:layout_columnSpan="2"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon_maurizio"
                android:layout_gravity="fill"
                app:srcCompat="@android:drawable/ic_media_play"
                android:minHeight="56dp" />

            <TextView
                android:text="5:59:59"
                android:id="@+id/textView_maurizio"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="30sp"
                android:width="120dp" />

        </GridLayout>

        <GridLayout
            android:id="@+id/grid_jens"
            android:background="#32901f"
            android:layout_gravity="top|fill_horizontal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/image_jens"
                app:srcCompat="@drawable/jens"
                android:layout_columnSpan="2"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon_jens"
                android:layout_gravity="fill"
                app:srcCompat="@android:drawable/ic_media_play"
                android:minHeight="56dp" />

            <TextView
                android:text="5:59:59"
                android:id="@+id/textView_jens"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="30sp"
                android:width="120dp" />

        </GridLayout>

        <GridLayout
            android:id="@+id/grid_julia"
            android:background="#d78e10"
            android:layout_gravity="top|fill_horizontal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/image_julia"
                app:srcCompat="@drawable/julia"
                android:layout_columnSpan="2"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon_julia"
                android:layout_gravity="fill"
                app:srcCompat="@android:drawable/ic_media_play"
                android:minHeight="56dp" />

            <TextView
                android:text="5:59:59"
                android:id="@+id/textView_julia"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="30sp"
                android:width="120dp" />

        </GridLayout>

    </GridLayout>


</RelativeLayout>
