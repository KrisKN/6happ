<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mauriundjens.sechsstundenapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <LinearLayout
                android:id="@+id/view_ornella"
                android:orientation="vertical"
                android:background="#d02645"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/image_ornella"
                    app:srcCompat="@drawable/ornella"
                    android:layout_weight="3"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="fill_parent">

                    <ImageView
                        android:id="@+id/icon_ornella"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        app:srcCompat="@android:drawable/ic_media_play"
                        android:minHeight="56dp" />

                    <TextView
                        android:text="0:00:00"
                        android:id="@+id/textView_ornella"
                        android:layout_weight="4"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_maurizio"
                android:orientation="vertical"
                android:background="#2e7fc7"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/image_maurizio"
                    app:srcCompat="@drawable/maurizio"
                    android:layout_weight="3"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="fill_parent">

                    <ImageView
                        android:id="@+id/icon_maurizio"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        app:srcCompat="@android:drawable/ic_media_play"
                        android:minHeight="56dp" />

                    <TextView
                        android:text="0:00:00"
                        android:id="@+id/textView_maurizio"
                        android:layout_weight="4"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <LinearLayout
                android:id="@+id/view_jens"
                android:orientation="vertical"
                android:background="#32901f"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/image_jens"
                    app:srcCompat="@drawable/jens"
                    android:layout_weight="3"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="fill_parent">

                    <ImageView
                        android:id="@+id/icon_jens"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        app:srcCompat="@android:drawable/ic_media_play"
                        android:minHeight="56dp" />

                    <TextView
                        android:text="0:00:00"
                        android:id="@+id/textView_jens"
                        android:layout_weight="4"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_julia"
                android:orientation="vertical"
                android:background="#d78e10"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/image_julia"
                    app:srcCompat="@drawable/julia"
                    android:layout_weight="3"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="fill_parent">

                    <ImageView
                        android:id="@+id/icon_julia"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        app:srcCompat="@android:drawable/ic_media_play"
                        android:minHeight="56dp" />

                    <TextView
                        android:text="0:00:00"
                        android:id="@+id/textView_julia"
                        android:layout_weight="4"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:layout_margin="3dp">

            <Button
                android:text="🎁"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/giftButton1"
                android:layout_weight="1"
                android:textSize="24sp"
                android:visibility="invisible" />

            <Button
                android:text="🎁"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/giftButton2"
                android:layout_weight="1"
                android:textSize="24sp"
                android:visibility="invisible" />

            <Button
                android:text="🎁"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/giftButton3"
                android:layout_weight="1"
                android:textSize="24sp"
                android:visibility="invisible" />

            <Button
                android:text="🎁"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/giftButton4"
                android:layout_weight="1"
                android:textSize="24sp"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
